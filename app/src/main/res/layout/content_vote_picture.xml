<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_choose_best"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_choose_best_picture"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            style="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/tv_about_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_choose_best"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            style="@style/Base.TextAppearance.AppCompat.Medium"/>

        <ImageView
            android:id="@+id/iv_zoom_in_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_magnify_plus_grey600_24dp"
            android:layout_below="@id/tv_choose_best"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:onClick="onMagnifyPlusFirstClick"/>

        <RelativeLayout
            android:id="@+id/rl_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gif_height"
            android:layout_below="@id/tv_about_first"
            android:layout_marginTop="@dimen/iv_vertical_margin">

            <Button
                android:id="@+id/btn_retry_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:layout_centerInParent="true"
                android:onClick="onRetryBtnFirstClick"/>

            <ProgressBar
                android:id="@+id/pb_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleLarge"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/giv_first"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_gif_height"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:onClick="onFirstGifClick"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_about_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_first"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            style="@style/Base.TextAppearance.AppCompat.Medium"/>

        <ImageView
            android:id="@+id/iv_zoom_in_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_magnify_plus_grey600_24dp"
            android:layout_below="@id/rl_first"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:onClick="onMagnifyPlusSecondClick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_gif_height"
            android:layout_below="@id/tv_about_second"
            android:layout_marginTop="@dimen/iv_vertical_margin">

            <Button
                android:id="@+id/btn_retry_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:layout_centerInParent="true"
                android:onClick="onRetryBtnSecondClick"/>

            <ProgressBar
                android:id="@+id/pb_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleLarge"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/giv_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_gif_height"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:onClick="onSecondGifClick"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>